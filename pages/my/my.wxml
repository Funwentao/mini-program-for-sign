<view class='wx-content'>
  <view>
    <view class='img-content'>
      <image src="{{userInfo.avatarUrl}}" class='user-avatar'></image>
    </view>
  </view>
  <view class='nick-name'>{{userInfo.nickName}}</view>
</view>
<view class='function-content'>
  <view class='item'>
    <view class='item-content'>
      <text class='tips'>姓名</text>
      <text class='value'>{{studentName}}</text>
    </view>
    <view class='item-content'>
      <text class='tips'>学号</text>
      <text class='value'>{{studentNum}}</text>
    </view>
  </view>
  <view class='item'>
    <view class='item-content' bindtap='changeAccount'>
      <text class='tips'>切换账户</text>
      <image src='../../icon/f107.png' class="arrow-img"></image>
    </view>
    <view class='item-content' bindtap='goToHistory'>
      <text class='tips'>签到记录</text>
      <image src='../../icon/f107.png' class="arrow-img"></image>
    </view>
    <view class='item-content' bindtap='goToEdit'>
      <text class='tips'>修改密码</text>
      <image src='../../icon/f107.png' class="arrow-img"></image>
    </view>
  </view>
</view>
